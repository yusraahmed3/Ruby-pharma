<h1> Add new Product </h1>

<%= form_for @product, url:{action: "create"} do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :price %>
        <%= f.text_field :price %>
    </p>
    <p>
        <%= f.submit("Add") %>
    </p>
<% end %>